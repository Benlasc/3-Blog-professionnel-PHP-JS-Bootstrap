{% extends 'layout.twig' %}

{% block title %}
	{{title}}
{% endblock %}

{% block content %}

	{% if user.hasFlash() %}
		{% set flash = user.getFlash() %}

		<div class="{{ flash[1] }}" role="alert">
			{{ flash[0] }}
		</div>
	{% endif %}

	<h3>Récupération du mot de passe</h3>
	<form action="" method="post">
		<input type="email" name="email" id="" placeholder="Indiquez votre mail" required>
        <button style="display: inline-block; margin-left: 15px;" class="btn btn-primary" type="submit">M'envoyer les instructions</button>
	</form>

{% endblock %}
